{
  "name": "file-organizer-app",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "desktop:dev": "APPIMAGE_EXTRACT_AND_RUN=1 turbo -F web desktop:dev",
    "desktop:build": "APPIMAGE_EXTRACT_AND_RUN=1 NO_STRIP=true turbo -F web desktop:build"
  },
  "dependencies": {
    "@file-organizer-app/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@file-organizer-app/config": "workspace:*",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.8"
}
